<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:padding="10dp"
    android:background="@color/place_layout_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macdonalds"
        android:id="@+id/name_text_view"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignTop="@+id/logo_image_view"
        android:layout_toRightOf="@+id/logo_image_view"
        android:layout_toEndOf="@+id/logo_image_view"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:fontFamily="sans-serif-light"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cinema City, Rishon Lzion"
        android:id="@+id/address_text_view"
        android:layout_below="@+id/name_text_view"
        android:layout_alignLeft="@+id/name_text_view"
        android:layout_alignStart="@+id/name_text_view"
        android:layout_marginTop="4dp"/>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/p1rvuwep28h"
        android:id="@+id/logo_image_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/wings"
        android:id="@+id/wings_image_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.9"
        android:id="@+id/grade_text_view"
        android:layout_alignTop="@id/wings_image_view"
        android:layout_alignBottom="@id/wings_image_view"
        android:layout_alignLeft="@id/wings_image_view"
        android:layout_alignRight="@+id/wings_image_view"
        android:layout_alignEnd="@+id/wings_image_view"
        android:layout_marginLeft="15.5dp"
        android:layout_marginTop="14dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/open_job_image_view"
        android:src="@mipmap/person"

        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/address_text_view"
        android:layout_toEndOf="@+id/address_text_view" />

</RelativeLayout>