<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:padding="10dp"
    android:background="@color/place_layout_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macdonalds"
        android:id="@+id/name_text_view"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignTop="@+id/logo_image_view"
        android:layout_toLeftOf="@+id/logo_image_view"
        android:layout_toStartOf="@+id/logo_image_view"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cinema City, Rishon Lzion"
        android:id="@+id/address_text_view"
        android:layout_alignBottom="@+id/logo_image_view"
        android:layout_alignRight="@+id/name_text_view"
        android:layout_alignEnd="@+id/name_text_view" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/p1"
        android:id="@+id/logo_image_view"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/wings"
        android:id="@+id/wings_image_view"
        android:layout_alignBottom="@+id/address_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.9"
        android:id="@+id/grade_text_view"
        android:layout_alignTop="@id/wings_image_view"
        android:layout_alignBottom="@id/wings_image_view"
        android:layout_alignLeft="@id/wings_image_view"
        android:layout_alignRight="@+id/wings_image_view"
        android:layout_alignEnd="@+id/wings_image_view"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>